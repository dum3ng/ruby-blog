<h2>articles list</h2>
<table>
  <thead>
  <tr>
    <td>title</td>
    <td>content</td>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'show', article_path(article) %></td>
        <td><%= link_to 'edit', edit_article_path(article) %></td>
        <td><%= link_to 'delete', article_path(article),
          method: :delete,
          data: {confirm: 'are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr/>
